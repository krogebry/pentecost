{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Parameters": {
    "VPCId": {
      "Type": "String",
      "Description": "VPC Id."
    },
    "CidrBlock": {
      "Type": "String",
      "Description": "CIDR Block for this subnet."
    },
    "InternetGatewayId": {
      "Type": "String",
      "Description": "Internet gateway id."
    },
    "AvailabilityZone": {
      "Type": "String",
      "Description": "AvailabilityZone"
    }
  },

  "Resources":{
    "SecondarySubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "Tags": [ {"Key": "Name", "Value": "prismopsauto" } ],
        "VpcId": { "Ref": "VPCId" },
        "CidrBlock": { "Ref": "CidrBlock" },
        "AvailabilityZone": { "Ref": "AvailabilityZone" }
      }
    },
    "SecondaryRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": { "VpcId": { "Ref": "VPCId" } }
    },
    "SecondaryRouteOnSecondarySubnet": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "GatewayId": { "Ref": "InternetGatewayId" },
        "RouteTableId": { "Ref": "SecondaryRouteTable" },
        "DestinationCidrBlock": "0.0.0.0/0"
      }
    },
    "SecondarySubnetRouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": { "Ref": "SecondarySubnet" },
        "RouteTableId": { "Ref": "SecondaryRouteTable" }
      }
    },
    "SecondarySubnetAcl": {
      "Type": "AWS::EC2::NetworkAcl",
      "Properties": { "VpcId": { "Ref": "VPCId" } }
    },
    "SecondarySubnetNetworkAclAssociation": {
      "Type": "AWS::EC2::SubnetNetworkAclAssociation",
      "Properties": {
        "SubnetId": { "Ref": "SecondarySubnet" },
        "NetworkAclId": { "Ref": "SecondarySubnetAcl" }
      }
    },

    "OutboundRepsponseAcl": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "Egress": "true",
        "Protocol": "6",
        "CidrBlock": "10.0.0.0/7",
        "PortRange": { "From": "1024", "To": "65535" },
        "RuleNumber": "100",
        "RuleAction": "allow",
        "NetworkAclId": { "Ref": "SecondarySubnetAcl" }
      }
    },

    "OutboundSSHAcl": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "Egress": "true",
        "Protocol": "6",
        "CidrBlock": "10.0.0.0/16",
        "PortRange": { "From": "22", "To": "22" },
        "RuleNumber": "101",
        "RuleAction": "allow",
        "NetworkAclId": { "Ref": "SecondarySubnetAcl" }
      }
    },

    "InboundSSHPrimarySubnetAclEntry": {
      "Type": "AWS::EC2::NetworkAclEntry",
      "Properties": {
        "Egress": "false",
        "Protocol": "6",
        "CidrBlock": "10.0.0.0/24",
        "PortRange": { "From": "22", "To": "22" },
        "RuleNumber": "100",
        "RuleAction": "allow",
        "NetworkAclId": { "Ref": "SecondarySubnetAcl" }
      }
    }
  },

  "Outputs": {
    "SubnetId": { 
      "Value": { "Ref": "SecondarySubnet" },
      "Description": "Secondary subnet id."
    },
    "SubnetAclId": { 
      "Value": { "Ref": "SecondarySubnetAcl" },
      "Description": "Secondary Subnet ACL id."
    }
  }
}
